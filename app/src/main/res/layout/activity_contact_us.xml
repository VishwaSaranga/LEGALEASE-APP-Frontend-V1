<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contact_us_screen"
    android:clipToOutline="true"
    android:background="#000000"
    android:elevation="6dp">

    <!--  Header Section  -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fillColor="#000000">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_header"
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/back_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:clipToOutline="true"
                android:background="@drawable/arrowleft"/>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/header_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="322dp"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:clipToOutline="true"
                android:background="@drawable/hlaws"
                />
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Contact Us"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="1sp"
                android:textStyle="bold"
                android:gravity="bottom"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_box"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/textbox">
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="219dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="86dp"
                android:gravity="top"
                android:hint="Search legal resources..."
                android:lineSpacingExtra="4sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:clipToOutline="true"
                android:background="@drawable/search"
                />
        </RelativeLayout>
    </RelativeLayout>

    <!--  Main Section  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/black"
                android:elevation="1dp">

                <RelativeLayout
                    android:id="@+id/info_mail"
                    android:layout_width="286dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:elevation="1dp">
                    <RelativeLayout
                        android:id="@+id/info_mail_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:clipToOutline="true"
                        android:background="@drawable/mailfill"
                        />
                    <TextView
                        android:id="@+id/info_mail_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:text="info@legalease.lk"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="4sp"
                        android:translationY="-1.83sp"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/info_phone"
                    android:layout_width="286dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:elevation="1dp">
                    <RelativeLayout
                        android:id="@+id/info_phone_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:clipToOutline="true"
                        android:background="@drawable/phonefill"
                        />
                    <TextView
                        android:id="@+id/info_phone_txt"
                        android:layout_width="240dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:text="+94 11 2562081 | +94 71 1032918"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="4sp"
                        android:translationY="-1.83sp"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/info_address"
                    android:layout_width="286dp"
                    android:layout_height="67dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="72dp"
                    android:elevation="1dp">
                    <RelativeLayout
                        android:id="@+id/info_address_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:clipToOutline="true"
                        android:background="@drawable/address"
                        />
                    <TextView
                        android:id="@+id/terrax_code"
                        android:layout_width="240dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:text="TerraX Coders (Pvt) Ltd,\nLegalEase Unit,\nNo. 101, Colombo 03, Sri Lanka."
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="4sp"
                        android:translationY="-1.83sp"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/company_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="306dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/company"
                    />
                <View
                    android:id="@+id/app_logo"
                    android:layout_width="64dp"
                    android:layout_height="63dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="306dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="73dp"
                    android:background="@drawable/logo"
                    />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/contactus_section"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:background="#000000">

                <TextView
                    android:id="@+id/contactus_heading"
                    android:layout_width="246dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text="Do you Need Help?"
                    android:textSize="20sp"
                    android:textColor="#FFD700"
                    android:lineSpacingExtra="0sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    android:id="@+id/we_are_alwa"
                    android:layout_width="350dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="58dp"
                    android:text="We are always here to help you."
                    android:textSize="16sp"
                    android:textColor="#BCC1CA"
                    android:lineSpacingExtra="4sp"
                    android:translationY="-2.11sp"
                    android:gravity="center_vertical"
                    />

                <RelativeLayout
                    android:id="@+id/username_box"
                    android:layout_width="349dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="98.5dp"
                    android:background="@drawable/textbox">
                    <RelativeLayout
                        android:id="@+id/username_box_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:background="@drawable/usernameline"
                        />
                    <EditText
                        android:id="@+id/username_box_txt"
                        android:layout_width="286dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Name"
                        android:textColorHint="#BCC1CA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/usermail_box"
                    android:layout_width="349dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="145.5dp"
                    android:background="@drawable/textbox">
                    <RelativeLayout
                        android:id="@+id/usermail_box_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:background="@drawable/mailline"
                        />
                    <EditText
                        android:id="@+id/usermail_box_txt"
                        android:layout_width="286dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Email"
                        android:textColorHint="#BCC1CA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userphone_box"
                    android:layout_width="349dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="192.5dp"
                    android:background="@drawable/textbox">
                    <RelativeLayout
                        android:id="@+id/userphone_box_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:background="@drawable/phoneline"
                        />
                    <EditText
                        android:id="@+id/userphone_box_txt"
                        android:layout_width="286dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Phone Number"
                        android:textColorHint="#BCC1CA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/usermsg_box"
                    android:layout_width="349dp"
                    android:layout_height="117dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="239.5dp"
                    android:background="@drawable/textbox">

                    <TextView
                        android:id="@+id/usermsg_box_title"
                        android:layout_width="125dp"
                        android:layout_height="22dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="12dp"
                        android:layout_centerVertical="true"
                        android:text="How can we help?"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="3sp"
                        android:translationY="-1.47sp"
                        android:gravity="top"
                        />

                    <EditText
                        android:id="@+id/usermsg_box_txt"
                        android:layout_width="286dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:gravity="top"
                        android:layout_marginTop="30dp"
                        android:hint="Please share what you want us to help"
                        android:textColorHint="#BCC1CA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/msgusbtn"
                    android:layout_width="350dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="368.5dp"
                    android:clipToOutline="true"
                    android:background="@drawable/onboardbtn">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        >

                        <RelativeLayout
                            android:id="@+id/msgusbtn_img"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginEnd="30dp"
                            android:background="@drawable/send"
                            />

                        <TextView
                            android:id="@+id/msgusbtn_txt"
                            android:layout_width="33dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Send"
                            android:textSize="14sp"
                            android:textColor="#171A1F"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_vertical"
                            />

                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <!--  Nav Section  -->

    <RelativeLayout
        android:id="@+id/nav_container"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.5dp"
        android:background="@drawable/navcontainer"
        android:elevation="1dp">

        <RelativeLayout
            android:id="@+id/nav_tab"
            android:layout_width="334dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <!--Home-->
            <RelativeLayout
                android:id="@+id/h_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/home"
                    />
                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Learn Laws-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/l_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="83.5dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/law_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/laws"
                    />
                <TextView
                    android:id="@+id/law_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Learn Laws"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Legal FAQs-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/f_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="167dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/faq_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/question"
                    />
                <TextView
                    android:id="@+id/faq_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Legal FAQs"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Legal Aids-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/a_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="250.5dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/aids_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/legalaids"
                    />
                <TextView
                    android:id="@+id/aids_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Legal Aids"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>