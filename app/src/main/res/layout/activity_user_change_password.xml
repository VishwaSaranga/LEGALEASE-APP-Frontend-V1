<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/change_password_screen"
    android:clipToOutline="true"
    android:background="#000000"
    android:elevation="6dp">

    <!--  Header Section  -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fillColor="#000000">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_header"
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/back_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:clipToOutline="true"
                android:background="@drawable/arrowleft"/>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/header_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="322dp"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:clipToOutline="true"
                android:background="@drawable/settings"
                />
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Change Your Password"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="1sp"
                android:textStyle="bold"
                android:gravity="bottom"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_box"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/textbox">
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="219dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="86dp"
                android:gravity="top"
                android:hint="Search legal resources..."
                android:lineSpacingExtra="4sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:clipToOutline="true"
                android:background="@drawable/search"
                />
        </RelativeLayout>
    </RelativeLayout>

    <!--  Main Section  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/account_details_heading"
            android:layout_width="175dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:text="Account Details"
            android:textSize="18sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/account_details_username"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/account_details_heading"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox">

            <RelativeLayout
                android:id="@+id/username_container"
                android:layout_width="349dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/username_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clipToOutline="true"
                    android:background="@drawable/usernamefill"
                    />

                <TextView
                    android:id="@+id/username_txt"
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:text="Vishwa Saranga"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/account_details_useremail"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/account_details_username"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox">

            <RelativeLayout
                android:id="@+id/useremail_container"
                android:layout_width="349dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/useremail_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clipToOutline="true"
                    android:background="@drawable/mailfill"
                    />

                <TextView
                    android:id="@+id/useremail_txt"
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:text="saranga@gmail.com"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/account_details_userid"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/account_details_useremail"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox">

            <RelativeLayout
                android:id="@+id/userid_container"
                android:layout_width="349dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/userid_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clipToOutline="true"
                    android:background="@drawable/userid"
                    />

                <TextView
                    android:id="@+id/userid_txt"
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:text="USR-1002"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/change_pass_heading"
            android:layout_width="175dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="Change Password"
            android:textSize="18sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:layout_below="@id/account_details_userid"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:id="@+id/new_password_section"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/change_pass_heading"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox">

            <RelativeLayout
                android:id="@+id/pass1"
                android:layout_width="349dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/pass1_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clipToOutline="true"
                    android:background="@drawable/passwordfill"
                    />

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:hint="Enter New Password"
                    android:textColorHint="#BCC1CA"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_password_section"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/new_password_section"
            android:layout_marginTop="10dp"
            android:background="@drawable/textbox">

            <RelativeLayout
                android:id="@+id/pass2"
                android:layout_width="349dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/pass2_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clipToOutline="true"
                    android:background="@drawable/passwordfill"
                    />

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:hint="Re-enter New Password"
                    android:textColorHint="#BCC1CA"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_container"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/re_password_section"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="366dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/savebutton"
                    android:layout_width="180dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/savebtn">
                    <RelativeLayout
                        android:layout_width="62dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/saveicon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ok"
                            />
                        <TextView
                            android:id="@+id/savetxt"
                            android:layout_width="35dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Save"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cancelbutton"
                    android:layout_width="180dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/cancelbtn">
                    <RelativeLayout
                        android:layout_width="77dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/cancelicon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/cancel"
                            />
                        <TextView
                            android:id="@+id/canceltxt"
                            android:layout_width="50dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Cancel"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!--  Nav Section  -->

    <RelativeLayout
        android:id="@+id/nav_container"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.5dp"
        android:background="@drawable/navcontainer"
        android:elevation="1dp">

        <RelativeLayout
            android:id="@+id/nav_tab"
            android:layout_width="334dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <!--Home-->
            <RelativeLayout
                android:id="@+id/h_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/home_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/home"
                    />
                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Learn Laws-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/l_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="83.5dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/law_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/laws"
                    />
                <TextView
                    android:id="@+id/law_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Learn Laws"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Legal FAQs-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/f_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="167dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/faq_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/question"
                    />
                <TextView
                    android:id="@+id/faq_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Legal FAQs"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>

            <!--Legal Aids-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/a_frame"
                android:layout_width="83.5dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="250.5dp"
                android:layout_alignParentTop="true"
                android:clipToOutline="true">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/aids_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:clipToOutline="true"
                    android:background="@drawable/legalaids"
                    />
                <TextView
                    android:id="@+id/aids_txt"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:lineSpacingExtra="2sp"
                    android:text="Legal Aids"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>